<%= form_with url: bikes_path, method: :get, class: "d-flex" do %>
  <%= text_field_tag :query,
    params[:query],
    class: "form-control",
    input_html: {data: {location_autocomplete_target: "query"}, class: "d-none"},
    wrapper_html: {data: {controller: "location-autocomplete", location_autocomplete_api_key_value: ENV["MAPBOX_API_KEY"]}}
  %>
  <%= submit_tag "Search", class: "btn btn-primary" %>
<% end %>
