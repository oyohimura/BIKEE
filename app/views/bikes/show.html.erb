<div class="map" style="background-image: url('<%= cl_image_path @bike.picture.key, height:500, crop: :fill %>')"></div>

<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="bike-show-card">
        <h1><%= @bike.brand %></h1>
        <p class="bike-show-address"><%= @bike.model %></p>
      </div>
      <div class="bike-show-card">
        <h3>This bike is available in</h3>
        <p><%= @bike.location %></p>
        <div class="map" style="background-image: url('https://maps.googleapis.com/maps/api/staticmap?center=<%= @bike.location %>&zoom=13&scale=2&size=1000x1000&maptype=roadmap&markers=color:red%7C<%= @bike.location %>&key=AIzaSyAPpx0wk4d-AQ8bhe8-a-ihC7NXLoPElhg')"></div>
      </div>
    </div>

    <div class="col-4">
      <div class="bike-show-card">
        <h5>Book this bike!</h5>
        <div>
          <%= link_to new_bike_rent_path(params[:id]), class: 'btn btn-success text-decoration-none' do %>
            Book now !
          <% end %>
        </div>
      </div>
      <div class="bike-show-card">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex">
            <% if @bike.electric%>
            <p> Electric bike ! </p>
            <% else %>
            <p> Muscular (manual) bike ! </p>
            <% end %>
          </div>
          <div class="flex ms-3">
            <%= @bike.price %>â‚¬ per day
          </div>
        </div>
      </div>
      <div class="bike-card-actions">
        <%= link_to 'Back to bikes index', bikes_path %>
        <%= link_to "Edit", edit_bike_path(@bike), class: "ms-3 text-warning" %>
        <%= link_to "Remove", bike_path(@bike),
            data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
            class: "ms-3 text-danger"
        %>
      </div>
    </div>
  </div>
</div>
