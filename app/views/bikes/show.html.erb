<div class="map" style="background-image: url('<%= cl_image_path @bike.picture.key %>')"></div>

<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="bike-show-card">
        <h1><%= @bike.model %></h1>
        <p class="bike-show-address"><%= @bike.brand %></p>
      </div>
      <div class="bike-show-card">
        <h3>A bit more about this bike...</h3>
        <p><%= @bike.location %></p>
        <% url = "https://api.mapbox.com/styles/v1/mapbox/streets-v12/static/#{@bike.longitude},#{@bike.latitude},10.,0,0/600x600?access_token=#{ENV['MAPBOX_API_KEY']}" %>
        <div class="map" style="background-image: url(<%= url %>)"></div>
      </div>
    </div>

    <div class="col-4">
      <div class="bike-show-card">
        <h5>Book this bike!</h5>
        <%= link_to 'Book', new_bike_rent_path(@bike), class: 'btn btn-success' %>
      </div>
      <div class="bike-show-card">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex">
            <%= @bike.price %> people
          </div>
          <div class="flex ms-3">
            <% if @bike.electric%>
              <p>Electric bike</p>
              <% else %>
              <p>Muscular (manual) bike</p>
            <% end %>
          </div>
        </div>
      </div>
      <div class="bike-show-card">
        <div class="flex-align">
          <h6 class="no-mb">Share</h6>

          <div class="flex">
            <i class="fa-brands fa-facebook-square me-2"></i>
            <i class="fa-brands fa-twitter-square me-2"></i>
            <i class="fa-brands fa-pinterest-square me-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
