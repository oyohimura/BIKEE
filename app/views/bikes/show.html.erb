<div class="map" style="background-image: url('<%= cl_image_path @bike.picture.key, height:500, crop: :fill %>')"></div>

<div class="container margin-top-negative">
  <div class="row">
    <div class="col-8">
      <div class="bike-show-card">
        <h1><%= @bike.brand %></h1>
        <p class="bike-show-address"><%= @bike.location %></p>
      </div>
      <div class="bike-show-card">
        <h3>A bit more about this bike...</h3>
        <p><%= @bike.model %></p>
        <div class="map" style="background-image: url('https://maps.googleapis.com/maps/api/staticmap?center=<%= @bike.location %>&zoom=13&scale=2&size=1000x1000&maptype=roadmap&markers=color:red%7C<%= @bike.location %>&key=AIzaSyAPpx0wk4d-AQ8bhe8-a-ihC7NXLoPElhg')"></div>
      </div>
    </div>

    <div class="col-4">
      <div class="bike-show-card">
        <h5>Book this bike!</h5>
        <div class="btn btn-success text-decoration-none">
          <%= link_to "Book now !", new_bike_rent_path(params[:id]) %>
        </div>
      </div>
      <div class="bike-show-card">
        <h3>Details</h3>
        <div class="flex">
          <div class="flex">
            <% if @bike.electric%>
            <p> Electric Bike ! </p>
             <% else %>
            <p> Manual Bike ! </p>
            <% end %>
          </div>
          <div class="flex ms-3">
            <%= @bike.price%>â‚¬ per day
          </div>
        </div>
      </div>
      <div class="bike-show-card">
        <div class="flex-align">
          <h6 class="no-mb">Share</h6>

          <div class="flex">
            <i class="fa-brands fa-facebook-square me-2"></i>
            <i class="fa-brands fa-twitter-square me-2"></i>
            <i class="fa-brands fa-pinterest-square me-2"></i>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
