<div class="container mt-3">
  <div class="row">
    <div class="col-12">
      <h1>All our Bikes</h1>
    </div>
  </div>

  <div class="row">
    <% @bikes.each do |bike| %>
      <div class="col-md-4">
        <div class="bike-card">
          <%= render 'product-card', bike: bike %>
          <div class="bike-card-actions">
            <%= link_to "More info", bike_path(bike) %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
