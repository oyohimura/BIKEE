<div class="container my-5 py-5 bg-light">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <%= simple_form_for @bike do |f| %>
        <div class="form-group text-center">
          <%= f.input :brand, class: "form-control" %>
        </div>
        <div class="form-group text-center mt-2">
          <%= f.input :model, class: "form-control" %>
        </div>
        <div class="form-group text-center mt-2">
          <%= f.input :price, class: "form-control", input_html: {min: 0} %>
        </div>
        <div class="form-group text-center mt-2">
          <%= f.input :location, class: "form-control" %>
        </div>
        <div class="form-group text-center mt-2">
          <%= f.input :electric,  as: :select, collection: [['Yes',true], ['No',false]], required: true, class: "form-control" %>
        </div>
        <div class="form-group text-center mt-2">
          <%= f.input :picture, as: :file %>
        </div>
        <div class="form-group text-center mt-3">
          <%= f.button :submit, "Submit !", class: "btn btn-primary" %>
        </div>
      <% end %>
      <div class="form-group text-center mt-3">
        <%= link_to "cancel", dashboard_path %>
      </div>
    </div>
  </div>

</div>
