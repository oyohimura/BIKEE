<div class="container mt-3">
  <div class="row">
    <h1>Welcome to your dashboard <%= @user.first_name %></h1>
      <div class="col-12">
        <%= link_to 'Add a bike', new_bike_path %>
      </div>
    </div>
  <div class="row">
    <div class="col-12">
      <%= link_to "My rentals (as a bike user)", rents_path, class: "ms-3 text-warning" %>
    </div>
  </div>

  <div class ="container mt-3">
    <h2> My bikes available for rental </h2>
    <table class="table">
      <thead>
        <tr>
          <th>Brand</th>
          <th>Model</th>
          <th>Price per hour</th>
        </tr>
      </thead>
      <tbody>
        <% @bikes.each do |bike| %>
          <tr>
            <td><%= bike.brand %></td>
            <td><%= bike.model %></td>
            <td><%= bike.price %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <div class ="container mt-3">
  <h2> My current bookings' requests</h2>
    <div class="col-12">
      <p>You currently have <%= @owner_rent.length%> rents</p>
      <%=link_to "My rentals (as an owner)", owner_rents_rents_path, class: "ms-3 text-warning" %>
    </div>
  </div>
 </div>
